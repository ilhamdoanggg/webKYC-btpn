{{> header}}
<div class="container" style="margin-top: 90px;">
    <div class="row">
        <div class="col-12">
            <h5 class="text-right">Selamat Datang, aloel Dev</h5>
        </div>
    </div>
</div>
<div class="container mt-3">
    <div class="row">
        <div class="col-sm-12 col-md-8">
            <form>
                <div class="form-group row">
                    <label for="nama" class="col-sm-2 col-form-label">Nama</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="nama">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="nopen" class="col-sm-2 col-form-label">Nopen</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="nopen">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="no-telp" class="col-sm-2 col-form-label">No telp</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control mb-2" id="no-telp">
                    </div>
                </div>
        </div>
        <div class="col-sm-12 col-md-4">
            <button class="btn btn-danger" type="submit"><i class="fas fa-phone-slash"></i> End Call</button>
        </div>
    </div>

    <div class="row mx-3 mt-3">
        <div class="col-sm-12 col-md-8 border py-3">
            <div class="row">
                <div id="container-video" class="col-sm-12 col-md-8">

                </div>
                {{!-- <div class="col-sm-12 col-md-4">
                    <video class="embed-responsive" width="200" height="200" autoplay controls></video>
                </div> --}}
            </div>
        </div>
        <div class="col-sm-12 col-md-4 border">
            <h3 class="text-center">Tools</h3>
            <button id="btn-open-room" class="btn btn-warning btn-block">Video Call</button>
            <button id="btn-join-room" class="btn btn-warning btn-block">Join Video</button>
            <button class="btn btn-warning btn-block">Send File</button>
            <button class="btn btn-warning btn-block">Pen</button>
            <button class="btn btn-warning btn-block">Documents</button>
            <button class="btn btn-warning btn-block">Results</button>
        </div>
    </div>
</div>
{{> footer}}