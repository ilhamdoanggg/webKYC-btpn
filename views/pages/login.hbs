<div class="container">
    <div class="row justify-content-center" style="margin-top: 10vh;">
        <div class="col-sm-12 col-md-6 col-lg-6 bg-light p-5 rounded">
            <img src="../assets/images/btpn.png" class="rounded mx-auto d-block mb-5" width="300" alt="logo-btpn">
            {{>message}}
            <h2 class="text-center mb-5">Please sign in</h2>
            <form action="/signin" method="POST">
                <div class="form-group">
                    <input type="email" name="email" class="form-control" id="email" placeholder="Email address"
                        autocomplete="off" required autofocus>
                </div>
                <div class="form-group">
                    <input type="password" name="password" class="form-control" id="password" placeholder="Password" required>
                </div>
                <button type="submit" class="btn btn-warning btn-block py-3">Login</button>
            </form>
            {{> footer}}
        </div>
    </div>
</div>
